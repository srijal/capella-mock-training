    <flow name="post:\eventcatalog:application\json:capella-event-catalog-training-config">
		<flow-ref doc:name="Flow Reference" doc:id="78969aac-0fb0-4373-b8e9-10709d04b1be" name="postEventCatalog"/>
		<logger level="INFO" doc:name="Logger" doc:id="b4ed1995-f819-4d41-9304-73e5dff6622f" />
    </flow>
</mule>
