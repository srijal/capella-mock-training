        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" doc:id="224570f0-9a4c-4567-9184-ee8218afd359">
            <ee:variables>
                <ee:set-variable variableName="ID"><![CDATA[
attributes.uriParams.ID]]></ee:set-variable>
            </ee:variables>
        </ee:transform>
		<flow-ref doc:name="GET Event Catalog By ID" doc:id="7356d909-ad05-469d-914b-30596b0c2fa0" name="getEventCatalogByID"/>
		<logger level="INFO" doc:name="Logger" doc:id="decc7cf1-5e70-40fb-87ca-ccda2b9fb0d9" />
